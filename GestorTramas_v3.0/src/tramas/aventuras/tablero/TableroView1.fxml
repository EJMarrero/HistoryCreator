<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="view" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <top>
        <VBox fx:id="cajaSuperior" BorderPane.alignment="CENTER">
            <MenuBar>
                <Menu text="Opciones">
                    <MenuItem onAction="#onSave" text="Guardar captura..." />
                    <MenuItem onAction="#onExit" text="Volver a Campaña" />
                </Menu>
            </MenuBar>
   
                              <ToolBar>
                <HBox alignment="CENTER" spacing="5">
                    <TextField fx:id="brushSize" text="18" />
                    <ColorPicker fx:id="colorPicker" />
                    <CheckBox fx:id="eraser" text="Eraser" />
                </HBox>
            <Button mnemonicParsing="false" onAction="#onLimpiarButtonAction" text="Limpiar Pizarra" />
            <Button mnemonicParsing="false" onAction="#onCargarImagenButtonAction" text="Cargar imagen..." />
            <Button mnemonicParsing="false" onAction="#onBackButtonAction" text="Volver a Campaña" />
            </ToolBar>
        </VBox>
   </top>
   <center>
      <StackPane fx:id="contenedorPizarra" BorderPane.alignment="CENTER">
         <children>
              <Canvas fx:id="canvas" height="2000.0" width="2000.0" />
            <ImageView fx:id="contenedorMapa" pickOnBounds="true" preserveRatio="true" />
         </children>
      </StackPane>
   </center>
</BorderPane>
